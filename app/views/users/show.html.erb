<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<h2>Posts</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.text %></td>
        <td><%= link_to 'Edit', edit_user_post_path(post.user, post) %></td>
        <td><%= link_to 'Destroy', [post.user, post], 
                        method: :delete, 
                        data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Add a post:</h2>
<%= form_for([@user, @user.posts.build]) do |post| %>
  <p>
    <%= post.label :title %><br />
    <%= post.text_field :title %>
  </p>
  <p>
    <%= post.label :text %><br />
    <%= post.text_area :text %>
  </p>
  <p>
    <%= post.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
