<h1>Editing Post</h1>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<h2>Post</h2>
<%= form_for :post, url: user_post_path(@user, @post), method: :patch do |post| %>
  <p>
    <%= post.label :title %><br />
    <%= post.text_field :title %>
  </p>
  <p>
    <%= post.label :text %><br />
    <%= post.text_area :text %>
  </p>
  <p>
    <%= post.submit %>
  </p>
<% end %>

<%= link_to 'Back', user_path(@user) %>

